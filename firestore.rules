rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Each bridge can only access its own tokens subcollection
    match /bridges/{bridgeId}/tokens/{tokenId} {
      allow read, write: if request.auth != null && request.auth.uid == bridgeId;
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
