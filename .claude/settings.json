{
  "permissions": {
    "allow": [
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(node:*)",
      "Bash(flutter:*)",
      "Bash(dart:*)",
      "Bash(git:*)",
      "Bash(mkdir:*)",
      "Bash(ls:*)",
      "Bash(which:*)",
      "Bash(npx tsc:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "Bash(head:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(echo:*)",
      "Bash(tar:*)",
      "Bash(chmod:*)",
      "Bash(xcrun simctl:*)",
      "Bash(pod install:*)",
      "Bash(gh api:*)",
      "Bash(gh search:*)",
      "Bash(gh issue view:*)",
      "Bash(pgrep:*)",
      "Bash(ps:*)",
      "Bash(kill:*)",
      "Bash(pkill:*)",
      "Bash(lsof:*)",
      "Bash(xargs:*)",
      "mcp__dart-mcp__pub",
      "mcp__dart-mcp__analyze_files",
      "mcp__dart-mcp__run_tests",
      "mcp__dart-mcp__list_devices",
      "mcp__dart-mcp__launch_app",
      "mcp__dart-mcp__connect_dart_tooling_daemon",
      "mcp__dart-mcp__get_app_logs",
      "mcp__dart-mcp__list_running_apps",
      "mcp__dart-mcp__pub_dev_search",
      "mcp__dart-mcp__resolve_workspace_symbol",
      "mcp__dart-mcp__hot_restart",
      "mcp__dart-mcp__hot_reload",
      "mcp__dart-mcp__get_runtime_errors",
      "mcp__dart-mcp__stop_app",
      "mcp__dart-mcp__flutter_driver",
      "mcp__dart-mcp__get_widget_tree",
      "mcp__dart-mcp__hover",
      "mcp__dart-mcp__signature_help",
      "mcp__dart-mcp__dart_format",
      "mcp__marionette__connect",
      "mcp__marionette__disconnect",
      "mcp__marionette__take_screenshots",
      "mcp__marionette__tap",
      "mcp__marionette__enter_text",
      "mcp__marionette__scroll_to",
      "mcp__marionette__get_interactive_elements",
      "mcp__marionette__get_logs",
      "mcp__marionette__call_custom_extension",
      "mcp__marionette__hot_reload",
      "WebSearch",
      "WebFetch(domain:pub.dev)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:docs.claude.com)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:gist.github.com)",
      "WebFetch(domain:www.npmjs.com)"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/post-edit-analyze.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/pre-stop-check.sh",
            "timeout": 120
          }
        ]
      }
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "marionette",
    "dart-mcp"
  ]
}
